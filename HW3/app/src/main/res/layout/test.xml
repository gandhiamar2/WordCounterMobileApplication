<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/plus"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="90dp"
        android:id="@+id/floatingActionButton2" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ret"
        android:layout_below="@+id/floatingActionButton2"
        android:layout_toRightOf="@+id/floatingActionButton2"
        android:layout_toEndOf="@+id/floatingActionButton2"
        android:layout_marginTop="57dp"
        android:id="@+id/floatingActionButton3" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:layout_alignTop="@+id/floatingActionButton3"
        android:layout_toLeftOf="@+id/floatingActionButton3"
        android:layout_toStartOf="@+id/floatingActionButton3"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginTop="28dp"
        android:id="@+id/floatingActionButton4" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        android:tint="@android:color/white"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_above="@+id/floatingActionButton4"
        android:layout_alignRight="@+id/floatingActionButton4"
        android:layout_alignEnd="@+id/floatingActionButton4"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:id="@+id/floatingActionButton5" />
</RelativeLayout>